<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/button_style</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDisablePreview">true</item>


    </style>


    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/mavenpromedium</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="listPreferredItemPaddingLeft">@dimen/dimen_16dp</item>

    </style>


    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>


    <style name="button_style" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/ic_button_shape</item>
        <item name="android:fontFamily">@font/mavenprobold</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextInputLayout.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/headerColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/headerColor</item>
        <item name="android:fontFamily">@font/mavenprobold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">viewStart</item>
    </style>


    <style name="TextInputStyle">
        <item name="colorAccent">@color/headerColor</item>
        <item name="android:colorPrimary">@color/headerColor</item>
        <item name="colorControlNormal">@color/headerColor</item>
        <item name="colorControlActivated">@color/headerColor</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorHint">@color/colorTextGray</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:fontFamily">@font/mavenpromedium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:backgroundTint">@color/colorTextGray</item>
        <item name="android:paddingBottom">@dimen/dimen_20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
    </style>


    <style name="headerTextStyle" parent="@style/TextRegular.MavenProBold">
        <item name="android:textSize">@dimen/dimen_26sp</item>
        <item name="android:textColor">@color/headerColor</item>

    </style>


    <style name="normalTextStyle" parent="@style/TextRegular.MavenProMedium">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/colorGray</item>

    </style>

    <style name="TextStyleExtraSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mavenpromedium</item>
        <item name="android:textSize">@dimen/dimen_07sp</item>
        <item name="android:textColor">@color/colorTextGray</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/mavenpromedium</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
    </style>


    <style name="ViewSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- TextView Style-->

    <style name="Textlarge" parent="@style/ViewSize">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSemilarge" parent="@style/ViewSize">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextMedium" parent="@style/ViewSize">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextRegular" parent="@style/ViewSize">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSmall" parent="@style/ViewSize">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextColorAcent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextData">
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>


    <style name="TextRegular.MavenProRegular">
        <item name="android:fontFamily">@font/mavenproregular</item>
        <item name="android:textColor">@color/colorTextGray</item>
    </style>

    <style name="TextRegular.MavenProMedium">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/mavenpromedium</item>
    </style>

    <style name="TextRegular.MavenProBold">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/mavenprobold</item>
    </style>
    <style name="TextSemilarge.MavenProMedium">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/mavenpromedium</item>
    </style>
    <style name="TextSemilarge.MavenProBold">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/mavenprobold</item>
    </style>

    <style name="TextMedium.MavenProBold">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/mavenprobold</item>

    </style>

    <style name="TextMedium.MavenProMedium">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/mavenpromedium</item>
    </style>

    <style name="TextMedium.primaryDark">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/mavenpromedium</item>
    </style>

    <style name="Textlarge.MavenProMedium">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/mavenpromedium</item>
    </style>
    <style name="Textlarge.MavenProBold">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/mavenprobold</item>
    </style>

    <style name="TextSmall.MavenProRegular">
        <item name="android:fontFamily">@font/mavenproregular</item>
        <item name="android:textColor">@color/colorTextGray</item>
    </style>
    <style name="Textlarge.primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="TextColorAcent.MavenProBold">
        <item name="android:textColor">@color/headerColor</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>

